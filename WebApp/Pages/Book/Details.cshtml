@page "{id:int}"
@model WebApp.Pages.Book.DetailsModel
@{
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>
@if (Model.booking == null)
{
    <p><strong>Booking not found.</strong></p>
}
else
{
    <dl>
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.booking.Title</dd>

        <dt class="col-sm-2">Booked By</dt>
        <dd class="col-sm-10">@Model.booking.BookedBy</dd>

        <dt class="col-sm-2">Room</dt>
        <dd class="col-sm-10">@Model.booking.RoomName</dd>

        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.booking.StartDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.booking.EndDate.ToString("yyyy-MM-dd HH:mm")</dd>

        <dt class="col-sm-2">Recurring</dt>
        <dd class="col-sm-10">@(Model.booking.IsRecurring ? "Yes" : "No")</dd>

        <dt class="col-sm-2">Attendees</dt>
        <dd class="col-sm-10">@Model.booking.NumOfAttendees</dd>
    </dl>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>
    <div>
        <a asp-page="/Home/Index">Back to Calendar</a>
    </div>
}
