@page "{id:int}"
@model WebApp.Pages.Book.DetailsModel
@{
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>
@if (Model.booking == null)
{
    <p><strong>Booking not found.</strong></p>
}
else
{
    <div class="row mb-1">
        <label class="col-sm-2 col-form-label fw-bold">Title</label>
        <div class="col-sm-10 col-form-label">
            @Model.booking.Title
        </div>
    </div>

    <div class="row mb-1">
        <label class="col-sm-2 col-form-label fw-bold">Booked By</label>
        <div class="col-sm-10 col-form-label">
            @Model.booking.BookedBy
        </div>
    </div>

    <div class="row mb-1">
        <label class="col-sm-2 col-form-label fw-bold">Room</label>
        <div class="col-sm-10 col-form-label">
            @Model.booking.RoomName
        </div>
    </div>

    <div class="row mb-1">
        <label class="col-sm-2 col-form-label fw-bold">Start Date</label>
        <div class="col-sm-10 col-form-label">
            @Model.booking.StartDate.ToString("yyyy-MM-dd HH:mm")
        </div>
    </div>

    <div class="row mb-1">
        <label class="col-sm-2 col-form-label fw-bold">End Date</label>
        <div class="col-sm-10 col-form-label">
            @Model.booking.EndDate.ToString("yyyy-MM-dd HH:mm")
        </div>
    </div>

    <div class="row mb-1">
        <label class="col-sm-2 col-form-label fw-bold">Recurring</label>
        <div class="col-sm-10 col-form-label">
            @(Model.booking.IsRecurring ? "Yes" : "No")
        </div>
    </div>

    <div class="row mb-5">
        <label class="col-sm-2 col-form-label fw-bold">Attendees</label>
        <div class="col-sm-10 col-form-label">
            @Model.booking.NumOfAttendees
        </div>
    </div>

    <div class="mb-2">
        <a asp-page="./Cancel" asp-route-id="@Model.booking.BookingId" class="btn btn-danger">Cancel Booking</a>
    </div>
    <div class="mb-2">
        <a asp-page="./Index">Back to List View</a>
    </div>
    <div class="mb-2">
        <a asp-page="/Home/Index">Back to Home Calendar View</a>
    </div>
}
