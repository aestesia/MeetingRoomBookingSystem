@page
@model Book.IndexModel
@{
    ViewData["Title"] = "Booking List";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@(Model.CurrentSort == "title_asc" ? "title_desc" : "title_asc")">
                    Title
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@(Model.CurrentSort == "bookedby_asc" ? "bookedby_desc" : "bookedby_asc")">
                    Booked By
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@(Model.CurrentSort == "room_asc" ? "room_desc" : "room_asc")">
                    Room
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@(Model.CurrentSort == "startdate_asc" ? "startdate_desc" : "startdate_asc")">
                    Start Date
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@(Model.CurrentSort == "enddate_asc" ? "enddate_desc" : "enddate_asc")">
                    End Date
                </a>
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model.Bookings)
        {
            <tr>
                <td>@booking.Title</td>
                <td>@booking.BookedBy</td>
                <td>@booking.RoomName</td>
                <td>@booking.StartDate</td>
                <td>@booking.EndDate</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@booking.BookingId" class="btn btn-primary">Details</a>
                    <a asp-page="./Cancel" asp-route-id="@booking.BookingId" class="btn btn-danger">Cancel</a>
                </td>
            </tr>
        }
    </tbody>
</table>
