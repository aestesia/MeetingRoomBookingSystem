@page "/"
@model IndexModel
@using System.Text.Json
@{
    ViewData["Title"] = "Home page";
    // var options = new System.Text.Json.JsonSerializerOptions
    // {
    //     PropertyNamingPolicy = System.Text.Json.JsonNamingPolicy.CamelCase
    // };
}

<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Room Booking Calendar</title>

        <!-- FullCalendar CSS -->
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.css" rel="stylesheet" />

        <style>
            #calendar {
                max-width: 900px;
                margin: 40px auto;
            }
        </style>
    </head>
    <body>
        <h1>Master Booking Calendar</h1>
        <div id="calendar"></div>

        <!-- FullCalendar JS -->
        <script src="https://cdn.jsdelivr.net/npm/fullcalendar@6.1.11/index.global.min.js"></script>

        <script>
            document.addEventListener('DOMContentLoaded', function(){
                var calendarEl = document.getElementById('calendar');
                // var events = Html.Raw(JsonSerializer.Serialize(Model.CalenderEvents, options));
                var calendar = new FullCalendar.Calendar(calendarEl, {
                    initialView: 'dayGridMonth',
                    // Pass events data from the server model to FullCalendar
                    events: @Html.Raw(JsonSerializer.Serialize(Model.CalenderEvents ?? new List<IndexModel.CalenderEvent>()))
                    // events: events
                });
                calendar.render();
            });
        </script>
    </body>
</html>
